<%- include layouts/header.ejs %>

    <div class="page-data">

        <form method="post" action="/customer_table/add">
            <table cellpadding="11">
                <tr>
                    <td class="label">Name</td>
                    <td>: <input type="text" name="name" required></td>
                </tr>
                <tr>
                    <td class="label" valign="top">Address</td>
                    <td valign="top">: <textarea name="address" required cols="30" rows="5"></textarea></td>
                </tr>
                <tr>
                    <td class="label">Phone</td>
                    <td>: <input type="text" name="phone" required></td>
                </tr>
                <tr>
                    <td class="label">Date</td>
                    <td>: <input type="date" name="date" required></td>
                </tr>
                <tr>
                    <td class="label">Problem</td>
                    <td>: <input type="text" name="problem" required></td>
                </tr>
                <tr>
                    <td class="label" valign="top">Complaint Resolution</td>
                    <td valign="top">: <textarea name="complaint_resolution" required cols="30" rows="5"></textarea></td>
                </tr>
                <!-- <tr>
                    <td class="label">Complaint resolution</td>
                    <td>: <input type="text" name="complaintresolution" required></td>
                </tr> -->
                <tr>
                    <td class="label"></td>
                    <td>
                        &nbsp; <input type="submit" name="submit" value="Save">
                        <input type="button" name="cancel" value="Cancel" class="cancel" onClick="cancelAdd()">
                    </td>
                </tr>
            </table>
        </form>

    </div>

    <%- include layouts/footer.ejs %>